{
  "name": "vdom",
  "version": "0.1.0",
  "description": "Virtual DOM implementation",
  "scripts": {
    "build": "esbuild --platform=browser --bundle --minify --outfile=lib/index.js src/index.ts",
    "dev": "esbuild --platform=browser --bundle --outfile=lib/index.js --watch src/index.ts",
    "format": "prettier --write ./src/**/*.ts",
    "test": "jest"
  },
  "author": "0918nobita <nobita.0918@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "26.0.23",
    "esbuild": "0.12.5",
    "jest": "27.0.3",
    "prettier": "2.3.0",
    "ts-jest": "27.0.2",
    "typescript": "4.3.2"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true
  }
}
